{
    "env": {
        "es6":   true,
        "mocha": true,
        "node":  true
    },
    "extends": "defaults",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": ["warn"]
    }
}
